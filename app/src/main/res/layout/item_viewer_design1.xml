<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/scoreplate"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/roundimage"
        android:backgroundTint="@color/primary_light"
        android:gravity="center"
        android:text="1515"
        android:textColor="@color/primary_text"
        android:textSize="15dp"
        android:textStyle="bold"
        android:tint="#212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"


        >

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/im_toplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/scoreplate"

        >




        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/im_deb1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical"
            android:text="Inviter Name"
            android:textColor="@color/primary"
            android:textSize="@dimen/textsize_small"
            app:layout_constraintLeft_toLeftOf="@id/im_deb1_img"
            app:layout_constraintTop_toBottomOf="@id/im_debatetopic"

            ></androidx.appcompat.widget.AppCompatTextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_deb1_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#BDBDBD"
            android:tint="#212121"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/modlayout">

        </de.hdodenhof.circleimageview.CircleImageView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_deb2_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#BDBDBD"

            android:tint="#212121"
            app:layout_constraintBottom_toBottomOf="@id/im_deb1_img"
            app:layout_constraintLeft_toRightOf="@id/im_deb1_img"
            app:layout_constraintTop_toTopOf="@id/im_deb1_img">

        </de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_mod_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#BDBDBD"
            android:tint="#212121"
            app:layout_constraintBottom_toBottomOf="@id/im_deb1_img"
            app:layout_constraintLeft_toRightOf="@id/im_deb2_img"
            app:layout_constraintTop_toTopOf="@id/im_deb1_img">

        </de.hdodenhof.circleimageview.CircleImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/im_deb2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Inviter Name"
            android:textColor="@color/primary"
            android:textSize="@dimen/textsize_small"
            app:layout_constraintBottom_toBottomOf="@id/im_deb1_name"
            app:layout_constraintLeft_toRightOf="@id/im_textlabel4"
            app:layout_constraintTop_toTopOf="@id/im_deb1_name"

            ></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/im_textlabel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:text="engages with "

            android:textColor="@color/primary_darktext"

            android:textSize="@dimen/textsize_small"
            app:layout_constraintLeft_toRightOf="@id/im_deb1_name"
            app:layout_constraintTop_toTopOf="@id/im_deb1_name">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/im_debatetopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:text="Details of the debate1 \n uyuiwqeqw"
            android:textColor="@color/primary_dark"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/im_deb1_img"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/modlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/im_deb1_img"
            app:layout_constraintTop_toBottomOf="@id/im_deb1_name"

            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/im_txtlabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"
                android:text="moderated by"
                android:textColor="@color/primary_darktext"
                android:textSize="@dimen/textsize_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/im_mod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Moderator Name"
                android:textColor="@color/primary"
                android:textSize="@dimen/textsize_small"
                app:layout_constraintLeft_toRightOf="@id/im_txtlabel2"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.AppCompatTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/im_rightlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/im_toplo"
        app:layout_constraintLeft_toRightOf="@id/scoreplate">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contextmsgtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"

            android:text="Details erererereresd \nfdfdfd fdfdfdfdfdfdfd uyuiwqeqw"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/textsize_standard"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatTextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintLeft_toRightOf="@id/scoreplate"
        app:layout_constraintTop_toBottomOf="@id/im_rightlo">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shareitem"
            android:layout_width="62dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintEnd_toStartOf="@+id/bmitem"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bmitem"
            android:layout_width="62dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_baseline_bookmark_24"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/shareitem"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/imm_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>