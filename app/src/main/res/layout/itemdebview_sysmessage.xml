<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:id="@+id/msg_outerlo"
    >

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/rello"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="lalalalaliuierwerwurioerucnruiunccc  uiuoiuoieq uiuqewuoiuqioweuouq uiuiouquwuqwueioqala"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/textsize_small"
            android:maxWidth="300sp"
            android:background="@drawable/deblabel"
            android:backgroundTint="@color/msg_sys"
            android:padding="5dp"
            />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/accent"
        app:cardCornerRadius="5dp"
        android:visibility="visible"
        android:layout_marginHorizontal="5dp"
        >




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/hightlightlo"
            >



            <LinearLayout
                android:id="@+id/tagview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/taglayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:visibility="gone"
                >
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewerpanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/taglayout"
                app:layout_constraintTop_toBottomOf="@id/tagview"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <ImageView

                    android:layout_width="@dimen/textsize_small"
                    android:layout_height="@dimen/textsize_small"
                    android:src="@drawable/ic_baseline_expand_less_24"
                    android:tint="@color/primary_text"
                    android:layout_marginLeft="@dimen/textsize_large"
                    android:padding="0dp"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/tagconcur"
                    android:layout_width="@dimen/textsize_small"
                    android:layout_height="@dimen/textsize_small"
                    android:text="0"
                    android:textSize="@dimen/textsize_extrasmall"
                    android:layout_marginHorizontal="2dp"
                    android:textColor="@color/primary_text"
                    ></TextView>
                <ImageView

                    android:layout_width="@dimen/textsize_small"
                    android:layout_height="@dimen/textsize_small"
                    android:src="@drawable/ic_baseline_expand_more_24"
                    android:tint="@color/primary_text"
                    android:layout_marginLeft="@dimen/textsize_large"
                    android:padding="0dp"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/tagnoconcur"
                    android:layout_width="@dimen/textsize_small"
                    android:layout_height="@dimen/textsize_small"
                    android:text="0"
                    android:textSize="@dimen/textsize_extrasmall"
                    android:layout_marginHorizontal="2dp"
                    android:textColor="@color/primary_text"
                    ></TextView>
            </LinearLayout>



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/messageImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messengerImageView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_account_circle_black_36dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:backgroundTint="#BDBDBD"
        android:layout_gravity="center_vertical"
        android:tint="#212121"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"

        />

</androidx.constraintlayout.widget.ConstraintLayout>