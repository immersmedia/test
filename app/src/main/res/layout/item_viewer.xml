<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewer_toplo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="50dp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/viewer_deb1_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#BDBDBD"
            android:tint="#212121"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewer_deb1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Inviter Name"
            android:textSize="@dimen/textsize_standard"
            app:layout_constraintLeft_toRightOf="@id/viewer_deb1_img"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"

            ></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewer_textlabel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical"
            android:text="in conversation with "

            app:layout_constraintTop_toBottomOf="@id/viewer_deb1_name"
            app:layout_constraintLeft_toLeftOf="@id/viewer_deb1_name"
            android:textStyle="italic"
            android:textColor="@color/primary_darktext">

        </androidx.appcompat.widget.AppCompatTextView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/viewer_deb2_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@id/viewer_deb1_img"
            app:layout_constraintTop_toTopOf="@id/viewer_deb2_name"


            >

        </de.hdodenhof.circleimageview.CircleImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewer_deb2_name"
            app:layout_constraintLeft_toLeftOf="@id/viewer_textlabel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="debater ag"
            app:layout_constraintTop_toBottomOf="@id/viewer_textlabel4"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            >
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewer_debatetopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical"
            android:text="Details of the debate1 \n uyuiwqeqw"
            app:layout_constraintLeft_toRightOf="@id/viewer_deb1_img"
            app:layout_constraintTop_toBottomOf="@id/viewer_deb2_name"
            >

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewer_txtlabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="moderated by"
            android:textColor="@color/primary_darktext"
            app:layout_constraintLeft_toRightOf="@id/viewer_deb1_img"
            app:layout_constraintTop_toBottomOf="@id/viewer_debatetopic"></androidx.appcompat.widget.AppCompatTextView
            >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/viewer_mod_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#BDBDBD"
            android:tint="#212121"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toLeftOf="@id/viewer_deb2_img"
            app:layout_constraintTop_toTopOf="@id/viewer_txtlabel2"
            android:visibility="visible">

        </de.hdodenhof.circleimageview.CircleImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewer_mod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center_vertical"
            android:text="Moderator Name"
            android:textColor="@color/primary_dark"
            app:layout_constraintLeft_toLeftOf="@id/viewer_txtlabel2"
            app:layout_constraintTop_toBottomOf="@id/viewer_txtlabel2"
            android:textStyle="bold"
            >

        </androidx.appcompat.widget.AppCompatTextView>







    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/imm_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/secondary_text"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewer_rightlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"

        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/viewer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="12:02"
            android:textSize="@dimen/textsize_extrasmall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginVertical="10dp"
            >

        </androidx.appcompat.widget.AppCompatTextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/viewer_myturnind"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_roundfilled"
            app:layout_constraintTop_toBottomOf="@id/viewer_time"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            >

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/viewer_debstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAITING"
            app:layout_constraintTop_toBottomOf="@id/viewer_time"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/textsize_extrasmall"
            android:layout_marginVertical="10dp"

            >

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>