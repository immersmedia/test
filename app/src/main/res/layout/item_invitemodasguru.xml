<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/item_invite_outerlo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/deblabel"
    android:backgroundTint="@color/primary_light"
    android:paddingHorizontal="10dp"
    android:layout_marginHorizontal="20dp"
    >

    <TextView
        android:id="@+id/item_invite_txtlbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="You are invited as a Guru"
        android:gravity="center"
        android:textSize="@dimen/textsize_small"
        android:textColor="@color/primary_text"
        android:padding="10dp"
        >
    </TextView>

    <EditText
        android:id="@+id/item_invite_msgedit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/item_invite_txtlbl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_invite_sendbtn"
        android:hint="Your intervention here"
        android:visibility="visible"
        android:textSize="@dimen/textsize_standard"
        android:textColorHint="@color/secondary_text"
        android:layout_marginHorizontal="5dp"
        android:lines="3"
        android:background="@drawable/deblabel"
        android:backgroundTint="@color/primary_text"
        android:layout_marginVertical="5dp"
        android:padding="5dp"
        />

    <ImageButton
        android:id="@+id/item_invite_sendbtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:enabled="false"
        android:text="SEND"
        android:src="@drawable/ic_send_black_24dp"
        android:tint="@color/primary_text"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_invite_msgedit"
        android:paddingVertical="12dp"
        android:layout_margin="5dp"
        android:background="@drawable/deblabel"
        android:backgroundTint="@color/primary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>