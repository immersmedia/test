<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@color/secondary_text"
        app:cardBackgroundColor="#E6E6E6"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:padding="5dp"
        android:visibility="visible">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/modreq_deb_det1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Details of the debate1 \n uyuiwqeqw"
                android:gravity="center_vertical"
                >
            </androidx.appcompat.widget.AppCompatTextView>


            <ImageView
                android:id="@+id/modreq_firstdeb_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/modreq_deb_det1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundimage"
                android:backgroundTint="#BDBDBD"
                android:layout_gravity="center_vertical"
                android:tint="#212121"
                android:layout_marginHorizontal="20dp"
                >
            </ImageView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/modreq_firstdeb_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/modreq_deb_det1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Moderator Name"
                android:gravity="center_vertical"
                android:textStyle="bold"
                >
            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/modreq_versus"
                app:layout_constraintTop_toBottomOf="@id/modreq_firstdeb_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="vs"
                android:gravity="center"
                >
            </androidx.appcompat.widget.AppCompatTextView>

            <ImageView
                android:id="@+id/modreq_seconddeb_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/modreq_versus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/roundimage"
                android:backgroundTint="#BDBDBD"
                android:layout_gravity="center_vertical"
                android:tint="#212121"
                >
            </ImageView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/modreq_seconddeb_name"
                app:layout_constraintTop_toBottomOf="@id/modreq_versus"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Moderator Name"
                android:gravity="center_vertical"
                android:textStyle="bold"
                >
            </androidx.appcompat.widget.AppCompatTextView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>